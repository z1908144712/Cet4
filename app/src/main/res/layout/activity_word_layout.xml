<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_white">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/fontWhite"
        android:text="自测单词"/>
    <LinearLayout
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_weight="7"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/id_word"
                android:layout_weight="8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_horizontal|bottom"
                android:textColor="@color/fontBlack"
                android:textSize="40sp"
                android:textStyle="bold"
                android:text="Word"/>
            <TextView
                android:id="@+id/id_phonetic"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_horizontal|top"
                android:textSize="16sp"
                android:text="/phonetic/"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/dash_line"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layerType="software">
        </LinearLayout>
        <LinearLayout
            android:layout_weight="3"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/id_voice"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_volume_up"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_weight="7"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center">
            <Button
                android:id="@+id/id_item_1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/init_word_plan_button_bg"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/fontWhite"
                android:textSize="16sp"
                android:text="1"/>
            <Button
                android:id="@+id/id_item_2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/init_word_plan_button_bg"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/fontWhite"
                android:textSize="16sp"
                android:text="2"/>
            <Button
                android:id="@+id/id_item_3"
                android:layout_width="match_parent"
                android:background="@drawable/init_word_plan_button_bg"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/fontWhite"
                android:textSize="16sp"
                android:layout_height="50dp"
                android:text="3"/>
            <Button
                android:id="@+id/id_item_4"
                android:layout_width="match_parent"
                android:background="@drawable/init_word_plan_button_bg"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/fontWhite"
                android:textSize="16sp"
                android:layout_height="50dp"
                android:text="4"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:id="@+id/id_unknown"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/red_button_bg"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="不认识"/>
            <Button
                android:id="@+id/id_next_word"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/red_button_bg"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="下一个"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
