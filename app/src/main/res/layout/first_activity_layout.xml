<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/word_plan_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="制定你的学习计划"
            android:textSize="30sp"
            android:textColor="@color/fontWhite"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">
                <Button
                    android:id="@+id/item_1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/unselected_word_plan_shape_button"
                    android:layout_margin="10dp"
                    android:textColor="@color/fontWhite"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="30天"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">
                <Button
                    android:id="@+id/item_2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/unselected_word_plan_shape_button"
                    android:layout_margin="10dp"
                    android:textColor="@color/fontWhite"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="35天"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">
                <Button
                    android:id="@+id/item_3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/selected_word_plan_shape_button"
                    android:layout_margin="10dp"
                    android:textColor="@color/fontBlack"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="40天"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">
                <Button
                    android:id="@+id/item_4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/unselected_word_plan_shape_button"
                    android:layout_margin="10dp"
                    android:textColor="@color/fontWhite"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="45天"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">
                <Button
                    android:id="@+id/item_5"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/unselected_word_plan_shape_button"
                    android:layout_margin="10dp"
                    android:textSize="20sp"
                    android:textColor="@color/fontWhite"
                    android:textStyle="bold"
                    android:text="50天"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">
                <Button
                    android:id="@+id/item_my"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/unselected_word_plan_shape_button"
                    android:layout_margin="10dp"
                    android:textSize="20sp"
                    android:textColor="@color/fontWhite"
                    android:textStyle="bold"
                    android:text="自定义"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/init_word_plan_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_gravity="center"
            android:background="@drawable/init_word_plan_button_bg"
            android:textColor="@color/fontWhite"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="开始学习"/>
    </LinearLayout>
</LinearLayout>
